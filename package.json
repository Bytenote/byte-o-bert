{
	"name": "byte-o-bert",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"dev": "dotenv -e .env -e .env.development -- turbo dev",
		"dev:bot": "dotenv -e .env -e .env.development -- turbo dev --filter=bot",
		"dev:backend": "dotenv -e .env -e .env.development -- turbo dev --filter=backend",
		"dev:frontend": "dotenv -e .env -e .env.development -- turbo dev --filter=frontend",
		"prod": "dotenv -e .env -e .env.production -- turbo start",
		"prod:bot": "dotenv -e .env -e .env.production -- turbo start --filter=bot",
		"prod:backend": "dotenv -e .env -e .env.production -- turbo start --filter=frontend --filter=backend",
		"pm2:bot": "dotenv -e .env -e .env.production -- pm2 start ecosystem.bot.config.cjs",
		"pm2:backend": "dotenv -e .env -e .env.production -- pm2 start ecosystem.backend.config.cjs",
		"commands:deploy": "dotenv -e .env -e .env.production -- turbo commands:deploy --filter=bot",
		"commands:devDeploy": "dotenv -e .env -e .env.development -- turbo commands:devDeploy --filter=bot"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"dotenv-cli": "^7.4.2",
		"pm2": "^5.4.0",
		"turbo": "^1.13.4"
	},
	"devDependencies": {
		"nodemon": "^3.1.3"
	},
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=20"
	}
}
